<!DOCTYPE html>
<html lang="en">
<head>
  <title>Popular Shoes</title>
</head>
<body>
  <a href="/" style="display:inline-block;margin-bottom:10px;">&larr; Back to Home</a>
  <h2>Popular Shoes (Sorted by <%= sortBy %> <%= order === 'desc' ? '↓' : '↑' %>)</h2>
  <p>
    <a href="/sort?by=price&order=desc">Highest Price</a> |
    <a href="/sort?by=price&order=asc">Lowest Price</a>
  </p>
  <table border="1" cellpadding="5">
    <tr>
      <th>Shoe Name</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Size</th>
    </tr>
    <% items.forEach(function(item) { %>
      <tr>
        <td><%= item.productName %></td>
        <td><%= item.brand %></td>
        <td>$<%= item.price %></td>
        <td><%= item.size %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
